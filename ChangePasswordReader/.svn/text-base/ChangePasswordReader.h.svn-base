#import <Foundation/Foundation.h>

@protocol ChangePasswordDelegate <NSObject>

-(void)changePasswordSuccessful:(NSString*)message;
-(void)changePasswordFailed:(NSString*)error;

@end

@interface ChangePasswordReader : NSObject {
    
    NSURLConnection     *urlConnection;
    NSMutableData       *urlData;
}

@property (nonatomic, assign) id<ChangePasswordDelegate>      delegate;

+(ChangePasswordReader*)sharedInstance;
-(void)requestChangePassword:(NSDictionary*)userInfo Delegate:(id<ChangePasswordDelegate>)passwordDelegate;
-(void)parseData:(NSString*)responseData;

@end