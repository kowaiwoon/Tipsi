#import <Foundation/Foundation.h>

@protocol LoginDelegate <NSObject>

-(void)loginSuccessful;
-(void)loginFailure:(NSString*)error;

@end

@interface LoginReader : NSObject {
    NSURLConnection     *urlConnection;
    NSMutableData       *urlData;
}

@property (nonatomic, assign) id<LoginDelegate>      delegate;

+(LoginReader*)sharedInstance;
-(void)requestLogin:(NSString*)username Password:(NSString*)password Delegate:(id<LoginDelegate>)loginDelegate;
-(void)parseData:(NSString*)responseData;

@end
